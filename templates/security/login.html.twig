{# templates/security/login.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-start" style="margin-top: 200px;"> {# Change justify-content-center to justify-content-start #}
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h2>Login</h2>
                    </div>
                    <div class="card-body">
                        {% if app.flashes('danger') is not empty %}
                            {% set firstFlashMessage = app.flashes('danger')|first %}
                            <div class="alert alert-danger">{{ firstFlashMessage|trans({}, 'security') }}</div>
                        {% endif %}

                        <form method="post" action="{{ path('user_registration') }}" class="mt-3">
                            <div class="mb-3">
                                <label for="username" class="form-label">Username or Email</label>
                                <input type="text" id="username" name="_username" value="{{ lastUsername }}" class="form-control" required autofocus>
                            </div>

                            <div class="mb-3">
                                <label for="password" class="form-label">Password</label>
                                <input type="password" id="password" name="_password" class="form-control" required>
                            </div>

                            <button type="submit" class="btn btn-primary btn-block" style="background-color: grey; color: white;">Login</button>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <style>
        body {
            background: url('{{ asset('image/login.jpg') }}') no-repeat fixed center;
            background-size: cover;
            background-color: rgba(0, 0, 0, 0);
            color: #000000;
            margin: 0;
        }

        /* Adjust the card layout */
        .card {
            width: 100%;
            max-width: 400px;
            margin: 0; /* Remove auto margin to align with the left */
        }
    </style>
{% endblock %}
