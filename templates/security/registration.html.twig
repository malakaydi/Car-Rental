{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-start" style="margin-top: 200px;"> {# Change justify-content-center to justify-content-start #}
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h2 class="text-center">Inscription</h2>
                    </div>
                    <div class="card-body">

                        {{ form_start(form, {'attr': {'class': 'form-group'}}) }}

                        {{ form_row(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Adresse email...'}}) }}

                        {{ form_row(form.username, {'label': 'Nom d\'utilisateur', 'attr': {'class': 'form-control', 'placeholder': 'Nom d\'utilisateur'}}) }}

                        {{ form_row(form.password, {'label': 'Mot de passe', 'attr': {'class': 'form-control', 'placeholder': 'Mot de passe '}}) }}

                        {{ form_row(form.confirmPassword, {'label': 'Répéter votre mot de passe', 'attr': {'class': 'form-control', 'placeholder': 'Répéter votre mot de passe...'}}) }}

                        {{ form_end(form) }}
                        <button type="submit" class="btn btn-primary btn-block" style="background-color: grey; color: white;">Register</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <style>
        body {
            background: url('{{ asset('image/login.jpg') }}') no-repeat fixed center;
            background-size: cover;
            background-color: rgba(0, 0, 0, 0);
            color: #000000;
            margin: 0;
        }

        /* Adjust the card layout */
        .card {
            width: 100%;
            max-width: 400px;
            margin: 0; /* Remove auto margin to align with the left */
        }
    </style>
{% endblock %}
