{# templates/huile_voiture/edit.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Edit Huile Voiture{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="text-center mb-4" style="color: #E9B824; font-family: 'Georgia', 'Times New Roman', 'Palatino', serif;">Edit Huile Voiture</h1>

                {{ form_start(form) }}
                
                <div class="form-group">
                    {{ form_label(form.MarqueHuile, 'Huile Brand', {'label_attr': {'style': 'color: #fff;'}}) }}
                    {{ form_widget(form.MarqueHuile, { 'attr': {'class': 'form-control', 'style': 'background-color: #2d2d2d; color: #fff;'} }) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.numHuile, 'Huile Number', {'label_attr': {'style': 'color: #fff;'}}) }}
                    {{ form_widget(form.numHuile, { 'attr': {'class': 'form-control', 'style': 'background-color: #2d2d2d; color: #fff;'} }) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.etat, 'Etat', {'label_attr': {'style': 'color: #fff;'}}) }}
                    {{ form_widget(form.etat, { 'attr': {'class': 'form-control', 'style': 'background-color: #2d2d2d; color: #fff;'} }) }}
                </div>

                {{ form_end(form) }}

                <div class="form-group mt-3">
                    <a href="{{ path('listeHuileV') }}" class="btn btn-secondary">Retour Ã  la liste</a>
                </div>
            </div>
        </div>
    </div>

    <style>
        body {
            background-color: #232323;
            padding-top: 70px;
            color: #fff;
        }
    </style>
{% endblock %}
