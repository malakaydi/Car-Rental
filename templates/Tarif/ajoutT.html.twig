{# templates/voiture/add.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Add Price{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="text-center mb-4" style="color: #E9B824; font-family: 'Georgia', 'Times New Roman', 'Palatino', serif;">Add Price</h1>

                {{ form_start(form) }}
                
                <div class="form-group">
                    {{ form_label(form.Periode, 'Periode', {'label_attr': {'style': 'color: #fff;'}}) }}
                    {{ form_widget(form.Periode, { 'attr': {'class': 'form-control', 'style': 'background-color: #2d2d2d; color: #fff;'} }) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.category, 'Category', {'label_attr': {'style': 'color: #fff;'}}) }}
                    {{ form_widget(form.category, { 'attr': {'class': 'form-control', 'style': 'background-color: #2d2d2d; color: #fff;'} }) }}
                </div>


                <div class="form-group">
                    {{ form_label(form.price, 'price', {'label_attr': {'style': 'color: #fff;'}}) }}
                    {{ form_widget(form.price, { 'attr': {'class': 'form-control', 'style': 'background-color: #2d2d2d; color: #fff;'} }) }}
                </div>

            

                <button type="submit" class="btn btn-secondary">Add</button>
                {{ form_end(form) }}

                <div class="form-group mt-3">
                    <a href="{{ path('listeTarif') }}" class="btn btn-secondary">Retour Ã  la liste</a>
                </div>
            </div>
        </div>
    </div>

    <style>
        body {
            background-color: #232323;
            padding-top: 70px;
            color: #fff;
        }
    </style>
{% endblock %}
