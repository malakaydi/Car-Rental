{# templates/vidange/add.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Add Oil Change{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="text-center mb-4" style="color: #E9B824; font-family: 'Georgia', 'Times New Roman', 'Palatino', serif;">Add Oil Change</h1>

                {{ form_start(form) }}

                <div class="form-group">
                    {{ form_label(form.filtreAir, 'Air Filter', {'label_attr': {'style': 'color: #fff;'}}) }}
                    {{ form_widget(form.filtreAir, {'attr': {'class': 'form-control', 'style': 'background-color: #2d2d2d; color: #fff;'}}) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.filtreHuile, 'Oil Filter', {'label_attr': {'style': 'color: #fff;'}}) }}
                    {{ form_widget(form.filtreHuile, {'attr': {'class': 'form-control', 'style': 'background-color: #2d2d2d; color: #fff;'}}) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.filtreGasoil, 'Diesel Filter', {'label_attr': {'style': 'color: #fff;'}}) }}
                    {{ form_widget(form.filtreGasoil, {'attr': {'class': 'form-control', 'style': 'background-color: #2d2d2d; color: #fff;'}}) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.huilVoiture, 'Car Oil', {'label_attr': {'style': 'color: #fff;'}}) }}
                    {{ form_widget(form.huilVoiture, {'attr': {'class': 'form-control', 'style': 'background-color: #2d2d2d; color: #fff;'}}) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.voiture, 'Vehicle', {'label_attr': {'style': 'color: #fff;'}}) }}
                    {{ form_widget(form.voiture, {'attr': {'class': 'form-control', 'style': 'background-color: #2d2d2d; color: #fff;'}}) }}
                </div>

                <button type="submit" class="btn btn-secondary">Add</button>
                {{ form_end(form) }}

                <div class="form-group mt-3">
                    <a href="{{ path('listeVidange') }}" class="btn btn-secondary">Return to List</a>
                </div>
            </div>
        </div>
    </div>

    <style>
        body {
            background-color: #232323;
            padding-top: 70px;
            color: #fff;
        }
    </style>
{% endblock %}
