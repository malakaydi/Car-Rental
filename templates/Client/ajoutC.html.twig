{# templates/voiture/add.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Add Client{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="text-center mb-4" style="color: #E9B824; font-family: 'Georgia', 'Times New Roman', 'Palatino', serif;">Add Client</h1>

                {{ form_start(form) }}
                
                <div class="form-group">
                    {{ form_label(form.nom, 'First Name', {'label_attr': {'style': 'color: #fff;'}}) }}
                    {{ form_widget(form.nom, { 'attr': {'class': 'form-control', 'style': 'background-color: #2d2d2d; color: #fff;'} }) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.prenom, 'Last Name', {'label_attr': {'style': 'color: #fff;'}}) }}
                    {{ form_widget(form.prenom, { 'attr': {'class': 'form-control', 'style': 'background-color: #2d2d2d; color: #fff;'} }) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.email, 'Email', {'label_attr': {'style': 'color: #fff;'}}) }}
                    {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'style': 'background-color: #2d2d2d; color: #fff;'} }) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.Numtel, 'Phone Number', {'label_attr': {'style': 'color: #fff;'}}) }}
                    {{ form_widget(form.Numtel, { 'attr': {'class': 'form-control', 'style': 'background-color: #2d2d2d; color: #fff;'} }) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.adresse, 'Address', {'label_attr': {'style': 'color: #fff;'}}) }}
                    {{ form_widget(form.adresse, { 'attr': {'class': 'form-control', 'style': 'background-color: #2d2d2d; color: #fff;'} }) }}
                </div>

                <button type="submit" class="btn btn-secondary">Add</button>
                {{ form_end(form) }}

                <div class="form-group mt-3">
                    <a href="{{ path('listeClient') }}" class="btn btn-secondary">Retour Ã  la liste</a>
                </div>
            </div>
        </div>
    </div>

    <style>
        body {
            background-color: #232323;
            padding-top: 70px;
            color: #fff;
        }
    </style>
{% endblock %}
